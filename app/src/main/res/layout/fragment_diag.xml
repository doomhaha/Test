<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.fragments.DiagFragment">

    <RadioGroup
        android:id="@+id/rbgrp_alertdiag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_com_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="普通"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_list_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_radio_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单选"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_check_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多选"
            android:textSize="30sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_show_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbgrp_alertdiag" />

    <RadioGroup
        android:id="@+id/rbgrp_processdiag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_alert">

        <RadioButton
            android:id="@+id/rb_date_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日期选择"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/rb_time_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间选择"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_show_pick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbgrp_processdiag" />

    <TextView
        android:id="@+id/tv_alarm_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_pick" />
</androidx.constraintlayout.widget.ConstraintLayout>
